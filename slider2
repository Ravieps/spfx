<style>
  .slider-container {
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  .slider-wrapper {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .slider-item {
    flex-shrink: 0;
    width: 100%;
    display: flex;
    align-items: center;
    box-sizing: border-box;
  }

  /* Article Layout */
  .article-layout .slider-image {
    width: 40%;
    padding: 20px;
  }

  .article-layout .slider-content {
    width: 60%;
    padding: 20px;
  }

  .slider-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  .slider-heading {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .slider-text {
    font-size: 16px;
    line-height: 1.5;
  }

  /* Testimonial Layout */
  .testimonial-card {
    margin: 0 auto;
    text-align: center;
    padding: 40px;
    max-width: 600px;
  }

  .testimonial-card img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 15px;
  }

  .testimonial-title {
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 8px;
  }

  .testimonial-author {
    font-style: italic;
    color: #555;
    margin-bottom: 12px;
  }

  .testimonial-content {
    font-size: 16px;
  }

  .slider-arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0,0,0,0.5);
    color: #fff;
    border: none;
    padding: 10px;
    cursor: pointer;
    z-index: 10;
  }

  .slider-arrow.left {
    left: 10px;
  }

  .slider-arrow.right {
    right: 10px;
  }

  @media (max-width: 768px) {
    .slider-item {
