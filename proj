<!-- jQuery CDN (if not already loaded in your SharePoint environment) -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
  .project-counter-container {
    background-image: url('https://via.placeholder.com/1200x400'); /* Replace with your image URL */
    background-size: cover;
    background-position: center;
    color: white;
    padding: 60px 30px;
    text-align: center;
    position: relative;
    font-family: 'Segoe UI', sans-serif;
  }

  .project-counter {
    display: inline-block;
    margin: 30px;
  }

  .project-counter h2 {
    margin: 10px 0 5px;
    font-size: 26px;
    font-weight: normal;
  }

  .project-counter .counter {
    font-size: 42px;
    font-weight: bold;
  }

  .as-of-date {
    position: absolute;
    bottom: 15px;
    right: 20px;
    font-size: 14px;
    background: rgba(0, 0, 0, 0.5);
    padding: 6px 10px;
    border-radius: 4px;
  }
</style>

<div class="project-counter-container">
  <div class="project-counter">
    <h2>Projects Completed</h2>
    <div class="counter" data-count="120">0</div>
  </div>
  <div class="project-counter">
    <h2>Ongoing Projects</h2>
    <div class="counter" data-count="35">0</div>
  </div>
  <div class="project-counter">
    <h2>Total Hours Saved</h2>
    <div class="counter" data-count="5400">0</div>
  </div>
  <div class="project-counter">
    <h2>Million Dollars Saved</h2>
    <div class="counter" data-count="2.4">0</div>
  </div>
  <div class="as-of-date">
    As of date: <span id="currentDate"></span>
  </div>
</div>

<script>
  $(document).ready(function () {
    $('.counter').each(function () {
      var $this = $(this);
      var countTo = parseFloat($this.attr('data-count'));
      $({ countNum: 0 }).animate(
        { countNum: countTo },
        {
          duration: 6000,
          easing: 'swing',
          step: function () {
            var displayVal = countTo % 1 === 0 ? Math.floor(this.countNum) : this.countNum.toFixed(1);
            $this.text(displayVal);
          },
          complete: function () {
            var displayVal = countTo % 1 === 0 ? Math.floor(this.countNum) : this.countNum.toFixed(1);
            $this.text(displayVal);
          }
        }
      );
    });

    // Set today's date
    var today = new Date();
    var formattedDate = today.toLocaleDateString(undefined, { year: 'numeric', month: 'long', day: 'numeric' });
    $('#currentDate').text(formattedDate);
  });
</script>
