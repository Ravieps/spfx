<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dynamic SharePoint Carousel</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap 4 CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <style>
    .carousel-inner {
      height: 400px;
      overflow: hidden;
    }

    .carousel-item {
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .carousel-image {
      flex: 1;
      max-width: 40%;
      height: 100%;
      padding-right: 20px;
    }

    .carousel-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 8px;
    }

    .carousel-text {
      flex: 2;
      height: 100%;
      overflow-y: auto;
    }

    @media (max-width: 768px) {
      .carousel-item {
        flex-direction: column;
        height: auto;
      }

      .carousel-image,
      .carousel-text {
        max-width: 100%;
        height: auto;
        padding-right: 0;
      }

      .carousel-inner {
        height: auto;
      }
    }
  </style>
</head>
<body>

<div id="riskCarousel" class="carousel slide" data-ride="carousel" data-interval="5000">
  <div class="carousel-inner" id="carouselContent">
    <!-- Slides will be injected here -->
  </div>

  <!-- Carousel Controls -->
  <a class="carousel-control-prev" href="#riskCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#riskCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<!-- Bootstrap JS & jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
  $(document).ready(function () {
    const siteUrl = _spPageContextInfo.webAbsoluteUrl; // Current site
    const listName = "CarouselItems"; // Your list name
    const restUrl = `${siteUrl}/_api/web/lists/getbytitle('${listName}')/items?$select=Title,Description,ImageUrl&$orderby=ID asc`;

    $.ajax({
      url: restUrl,
      type: "GET",
      headers: {
        "Accept": "application/json;odata=verbose"
      },
      success: function (data) {
        const items = data.d.results;
        let html = "";

        items.forEach((item, index) => {
          const isActive = index === 0 ? "active" : "";
          html += `
            <div class="carousel-item ${isActive}">
              <div class="carousel-image">
                <img src="${item.ImageUrl}" alt="Slide ${index + 1}">
              </div>
              <div class="carousel-text">
                <h5>${item.Title}</h5>
                <p>${item.Description}</p>
              </div>
            </div>`;
        });

        $("#carouselContent").html(html);
      },
      error: function (err) {
        console.error("Error fetching carousel data", err);
      }
    });
  });
</script>

</body>
</html>
