<div class="case-container">
  <h1>Explore Our Case Studies</h1>
  <p>Discover how our clients solved real business problems with our support and expertise. Click on a title to download the full case study.</p>
  <div class="case-studies" id="caseStudyContainer">
    <!-- Case studies will be dynamically inserted here -->
  </div>
</div>

<script type="text/javascript">
  function getCaseStudies() {
    var siteUrl = _spPageContextInfo.webAbsoluteUrl;
    var listName = "Case Studies";

    var endpoint = siteUrl + "/_api/web/lists/getbytitle('" + listName + "')/items?$select=Title,Description,DocumentLink";

    $.ajax({
      url: endpoint,
      method: "GET",
      headers: { "Accept": "application/json; odata=verbose" },
      success: function (data) {
        var items = data.d.results;
        var html = "";

        items.forEach(function (item) {
          var link = item.DocumentLink ? item.DocumentLink.Url : "#";
          var title = item.Title || "Untitled";
          var desc = item.Description || "";

          html += `
            <div class="case-card">
              <div class="case-label">ðŸ“„ Case Study</div>
              <div class="case-title">
                <a href="${link}" download>${title}</a>
              </div>
              <div class="case-desc">${desc}</div>
            </div>
          `;
        });

        document.getElementById("caseStudyContainer").innerHTML = html;
      },
      error: function (error) {
        console.error("Error fetching case studies: ", error);
        document.getElementById("caseStudyContainer").innerHTML = "<p>Failed to load case studies. Please try again later.</p>";
      }
    });
  }

  // Load the case studies after the page is ready
  $(document).ready(function () {
    getCaseStudies();
  });
</script>
