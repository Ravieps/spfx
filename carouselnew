<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  let currentSlide = 0;
  let slides = [];

  function renderSlides(data) {
    const container = $('#sliderContainer');
    data.forEach((item, index) => {
      let slideHtml = `
        <div class="slide ${index === 0 ? 'active' : ''}">
          <img src="${item.ImageURL}" alt="${item.Title}" />
          <div class="content">
            <div class="title">${item.Title}</div>`;
      if (item.Category === 'Testimonial') {
        slideHtml += `<div><strong>${item.Designation}</strong><br>${item.Comment}</div>`;
      } else {
        slideHtml += `<div>${item.Content}</div>
                      <a class="read-more" href="${item.ArticleLink}" target="_blank">Read More</a>`;
      }
      slideHtml += `</div></div>`;
      container.prepend(slideHtml);
    });
    slides = $('.slide');
  }

  function nextSlide() {
    slides.eq(currentSlide).removeClass('active');
    currentSlide = (currentSlide + 1) % slides.length;
    slides.eq(currentSlide).addClass('active');
  }

  function prevSlide() {
    slides.eq(currentSlide).removeClass('active');
    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
    slides.eq(currentSlide).addClass('active');
  }

  function startSlider() {
    setInterval(() => {
      nextSlide();
    }, 5000); // Auto slide every 5 seconds
  }

  function getListItems() {
    const siteUrl = _spPageContextInfo.webAbsoluteUrl;
    const listName = "YourListName"; // Replace with your SharePoint list name

    $.ajax({
      url: `${siteUrl}/_api/web/lists/getbytitle('${listName}')/items?$select=Title,Category,ImageURL,Content,Designation,Comment,ArticleLink`,
      method: "GET",
      headers: { "Accept": "application/json;odata=verbose" },
      success: function(data) {
        const items = data.d.results.map(item => ({
          Title: item.Title,
          Category: item.Category,
          ImageURL: item.ImageURL,
          Content: item.Content,
          Designation: item.Designation,
          Comment: item.Comment,
          ArticleLink: item.ArticleLink
        }));
        renderSlides(items);
        startSlider();
      },
      error: function(error) {
        console.error("Error fetching list items", error);
      }
    });
  }

  $(document).ready(function() {
    getListItems();

    // Stop glowing after 4 seconds
    setTimeout(() => {
      $('#bulbIcon').removeClass('glow');
    }, 4000);
  });
</script>
