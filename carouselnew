<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  let currentSlide = 0;
  let slides = [];

  function renderSlides(data) {
    const container = $('#sliderContainer');
    data.forEach((item, index) => {
      const isTestimonial = item.Category?.toLowerCase() === "testimonial";
      const slideClass = isTestimonial ? "testimonial" : "article";
      const articleLink = item.ArticleLink || "/sites/yoursite/SitePages/Default.aspx"; // Fallback

      let slideHtml = `<div class="slide ${slideClass} ${index === 0 ? 'active' : ''}">`;

      if (isTestimonial) {
        slideHtml += `
          <img src="${item.ImageURL}" alt="${item.Title}" />
          <div class="content">
            <div class="title">${item.Title}</div>
            <div class="designation"><i>${item.Designation}</i></div>
            <div class="comment">‚Äú${item.Comment}‚Äù</div>
          </div>
        `;
      } else {
        slideHtml += `
          <a href="${articleLink}" target="_blank">
            <img src="${item.ImageURL}" alt="${item.Title}" />
          </a>
          <div class="content">
            <div class="title">
              <a href="${articleLink}" target="_blank">${item.Title}</a>
            </div>
            <div>${item.Content}</div>
            <a class="read-more" href="${articleLink}" target="_blank">Read More</a>
          </div>
        `;
      }

      slideHtml += `</div>`;
      container.append(slideHtml);
    });

    slides = $('.slide');
  }

  function nextSlide() {
    slides.eq(currentSlide).removeClass('active');
    currentSlide = (currentSlide + 1) % slides.length;
    slides.eq(currentSlide).addClass('active');
  }

  function prevSlide() {
    slides.eq(currentSlide).removeClass('active');
    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
    slides.eq(currentSlide).addClass('active');
  }

  function startSlider() {
    setInterval(nextSlide, 5000);
  }

  function getListItems() {
    const siteUrl = _spPageContextInfo.webAbsoluteUrl;
    const listName = "YourListName"; // Update this

    $.ajax({
      url: `${siteUrl}/_api/web/lists/getbytitle('${listName}')/items?$select=Title,Category,ImageURL,Content,Designation,Comment,ArticleLink`,
      method: "GET",
      headers: { "Accept": "application/json;odata=verbose" },
      success: function(data) {
        const items = data.d.results.map(item => ({
          Title: item.Title,
          Category: item.Category,
          ImageURL: item.ImageURL,
          Content: item.Content,
          Designation: item.Designation,
          Comment: item.Comment,
          ArticleLink: item.ArticleLink
        }));
        renderSlides(items);
        startSlider();
      },
      error: function(error) {
        console.error("Error fetching list items", error);
      }
    });
  }

  $(document).ready(function() {
    getListItems();
    setTimeout(() => {
      $('#bulbIcon').removeClass('glow');
    }, 4000);
  });
</script>
