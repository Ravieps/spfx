    <div class="slider-wrapper">
      <div class="slider" id="slider">
        <!-- JS will inject slides -->
      </div>

      <!-- Arrows -->
      <div class="slider-arrows">
        <button class="arrow" onclick="prevSlide()">‚Äπ</button>
        <button class="arrow" onclick="nextSlide()">‚Ä∫</button>
      </div>
