    font-family: "Segoe UI", sans-serif;
  }

  .tree-node {
    position: relative;
    text-align: center;
    margin: 20px 10px;
  }

  .tree-card {
    background: #003366;
    color: #fff;
    padding: 12px 16px;
    border-radius: 8px;
    width: 240px;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 10px;
    margin: 0 auto;
    cursor: pointer;
    box-sizing: border-box;
    transition: background 0.3s ease;
  }

  .tree-card:hover {
    background: #004080;
  }

  .tree-card img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 2px solid #fff;
  }

  .children-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 30px;
    position: relative;
  }

  /* Connect lines between nodes */
  .tree-node::before {
    content: '';
    position: absolute;
    top: -20px;
    left: 50%;
    border-left: 2px solid #999;
    height: 20px;
  }

  .children-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 20px;
    border-top: 2px solid #999;
  }

  .tree-node:first-child::before {
    border-left: none;
  }

  .tree-node:last-child::before {
    border-left: none;
  }

  .tree-node:only-child::before,
  .tree-node:only-child .children-container::before {
    display: none;
  }

  .toggle-btn {
    position: absolute;
    top: -10px;
    right: -10px;
    background-color: #ffdc00;
    color: #111;
    border-radius: 50%;
    font-size: 11px;
    font-weight: bold;
    width: 22px;
    height: 22px;
    line-height: 22px;
    z-index: 1;
  }

  /* Modal Styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 999;
    padding-top: 100px;
